# Database Configuration
DATABASE_URL=postgresql://brain_user:your_password_here@localhost:5432/syntergic_brain

# InfluxDB Configuration
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your_influxdb_token_here
INFLUXDB_ORG=syntergic
INFLUXDB_BUCKET=brain_sessions

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# CORS Origins (separate multiple with commas)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://yourdomain.com

# Hardware Configuration (opcional)
MUSE_ENABLE=false
MUSE_ADDRESS=00:55:DA:B0:XX:XX

# Development/Production Mode
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO
